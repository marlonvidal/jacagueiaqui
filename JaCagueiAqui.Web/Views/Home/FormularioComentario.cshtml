@model JaCagueiAqui.Model.Comentario
<fieldset>
    <legend>Deixe o seu comentário!</legend>    
    @Html.ValidationSummary(true)
    @Html.LabelFor(x => x.Nome)
    @Html.EditorFor(x => x.Nome)
    @Html.ValidationMessageFor(x => x.Nome)
    <br />
    @Html.LabelFor(x => x.Email)
    @Html.EditorFor(x => x.Email)
    @Html.ValidationMessageFor(x => x.Email)
    <br />
    @Html.LabelFor(x => x.Descricao)
    @Html.EditorFor(x => x.Descricao)
    @Html.ValidationMessageFor(x => x.Descricao)
    <br />
    <input type="submit" class="btn btn-success" value="Enviar" />
</fieldset>
